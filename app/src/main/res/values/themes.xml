<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OkeGas" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tmdb_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tmdb_secondary</item>
        <item name="colorSecondaryVariant">@color/tmdb_tertiary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/tmdb_primary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">@color/tmdb_primary</item>
        <item name="colorPrimaryDark">@color/tmdb_secondary</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="TransparentStatusBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/tmdb_primary</item>
    </style>



    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name= "BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">
            @style/BottomSheetStyle
        </item>
    </style>

    <style name="Theme.GithubUserApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GithubUserApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonWithIcon" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/border_red_for_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/jakartasans_bold</item>
    </style>

</resources>